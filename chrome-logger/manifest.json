{
    "manifest_version": 2,

    "name": "Search activity logger",
    "description": "This extension logs user search/browsing activities with chrome.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icons/icon_19.png",
        "default_popup": "popup.html",
        "default_title": "My activities"
    },


    "background": {
        "persistent": true,
        "scripts": ["external/jquery-1.11.3.min.js", "background.js" ]
    },

    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["external/jquery-1.11.3.min.js", "content.js"]
        }
    ],

    "permissions": [
        "tabs",
        "webNavigation",
        "<all_urls>"
    ]
}
