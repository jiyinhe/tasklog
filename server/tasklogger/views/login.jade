doctype html
html( leng="en" )
    head
        title User login 
        meta(charset='utf-8')
        link(href="/stylesheets/style.css", rel="stylesheet")
        link(href="/stylesheets/bootstrap.min.css", rel="stylesheet")
        script(src="/javascripts/jquery-1.11.3.min.js")
        script(src="/javascripts/bootstrap.min.js")
    body
        .container
            .jumbotron
                h3(class=["text-center", "space30"]) User login
                form(class=["form-horizontal"], method="post", action="/users/login")
                    .form-group
                        label(for="email", class=["col-sm-2", "col-sm-offset-1", "control-label"]) Email
                        .col-sm-6
                            input#login_email(type="email", class="form-control", name="username")
                    .form-group
                        label(for="pass1", class=["col-sm-2", "col-sm-offset-1", "control-label"]) Password 
                        .col-sm-6
                            input#login_pass(type="password", class="form-control", name="password")
                    
                    .form-group
                        div(class=["col-sm-offset-3", "col-sm-6"])
                            div#login_err(class=["err", "space5"])=err   
                            input#login_btn(type="submit", class=["btn", "btn-primary"] name="Login")
                            //.todo TODO: Should have a password recovery service, need to setup a mail server for it.
                            p(class="space5")
                                a(href="/forgotpassword") Forgot password 
