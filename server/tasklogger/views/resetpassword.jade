doctype html
html( leng="en" )
    head
        title Reset password
        meta(charset='utf-8')
        link(href="/stylesheets/style.css", rel="stylesheet")
        link(href="/stylesheets/bootstrap.min.css", rel="stylesheet")
        script(src="/javascripts/jquery-1.11.3.min.js")
        script(src="/javascripts/bootstrap.min.js")
 
    body
        .container
            .page-header 
                 h2 Reset password

            h4(class=["space30"])
                if messages.error
                    .alert.alert-danger
                        div= messages.error
                if messages.info
                    .alert.alert-info
                        div= messages.info
                if messages.success
                    .alert.alert-success
                        div= messages.success 

            form(class=["form-horizontal"], method="post")
                .form-group
                    label(for="pass1", class=["col-sm-2", "col-sm-offset-1", "control-label"]) New password
                    .col-sm-6
                        input#new_pass1(type="password", class="form-control", name="pass1")

                .form-group
                    label(for="pass2", class=["col-sm-2", "col-sm-offset-1", "control-label"]) Confirm password
                    .col-sm-6
                        input#new_pass2(type="password", class="form-control", name="pass2")
                   
                .form-group
                    div(class=["col-sm-offset-3", "col-sm-6"])
                        button#reset_btn(type="submit", class=["btn", "btn-primary"], name="reset") Update password

                       
