doctype html
html( leng="en" )
    head
        title Reset password
        meta(charset='utf-8')
        link(href="/stylesheets/style.css", rel="stylesheet")
        link(href="/stylesheets/bootstrap.min.css", rel="stylesheet")
        script(src="/javascripts/jquery-1.11.3.min.js")
        script(src="/javascripts/bootstrap.min.js")
 
    body
        .container
            .jumbotron
                h4(class=["text-center", "space30"]) Please enter your new password:
                form(class=["form-horizontal"], method="post", action="/users/login")
                    .form-group
                        label(for="pass1", class=["col-sm-2", "col-sm-offset-1", "control-label"]) New password 
                        .col-sm-6
                            input#newpass1(type="password", class="form-control", name="pass1")
                    .form-group
                        label(for="pass2", class=["col-sm-2", "col-sm-offset-1", "control-label"]) New password (again)
                        .col-sm-6
                            input#newpass2(type="password", class="form-control", name="pass2")
                    
                    .form-group
                        div(class=["col-sm-offset-3", "col-sm-6"])
                            div#login_err(class=["err", "space5"])=err   
                            input#newpass_btn(type="submit", class=["btn", "btn-primary"] name="Login")
                 
