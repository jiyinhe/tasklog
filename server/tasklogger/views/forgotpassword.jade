doctype html
html( leng="en" )
    head
        title Reset password
        meta(charset='utf-8')
        link(href="/stylesheets/style.css", rel="stylesheet")
        link(href="/stylesheets/bootstrap.min.css", rel="stylesheet")
        script(src="/javascripts/jquery-1.11.3.min.js")
        script(src="/javascripts/bootstrap.min.js")
 
    body
        .container
            .page-header 
                h2 Forgot password

            h4(class=["space30"])
                if messages.error
                    .alert.alert-danger
                        div= messages.error
                if messages.info
                    .alert.alert-info
                        div= messages.info
                if messages.success
                    .alert.alert-success
                        div= messages.success 

            form(class=["form-horizontal"], method="post", action="/forgotpassword")
                .form-group
                    label(for="email", class=["col-sm-2", "col-sm-offset-1", "control-label"]) Email 
                    .col-sm-6
                        input#forget_email(type="email", class="form-control", name="email")
                    
                .form-group
                    div(class=["col-sm-offset-3", "col-sm-6"])
                        input#forgetpass_btn(type="submit", class=["btn", "btn-primary"], name="submit")

                 
